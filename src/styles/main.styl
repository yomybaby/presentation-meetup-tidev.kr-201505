@import 'prism/themes/prism-okaidia.css'
// Check out "bower_components/prism/themes/" for available themes

$backgroundColor = #111
$textColor = #000
$boxColor = #fff
$arrowColor = #fff




svg
  color: $textColor
  font-family: didot

  .node
    fill: $boxColor !important
    stroke: none !important

  path
    stroke: $arrowColor !important

  [id^=arrowhead] path
    fill: $arrowColor !important

  .label span
    background: $backgroundColor !important
    color: white !important
    font-size: .6em
    padding: .5em .6em 1.5em

.messageLine0, .messageLine1
  // stroke-width:1.5
  // stroke-dasharray: "2 2"
  // marker-end:"url(#arrowhead)"
  stroke:$arrowColor

.messageText 
  fill: $arrowColor
  
.actor-line
  stroke-width: 2

li
  font-family: didot
  font-style: italic

a h4
  margin: .4em 0

.large
  zoom: 1.4

.avatar
  width: 100px
  border-radius: @width

.caption
  font-size: .8em
  position: fixed
  bottom: 0
  left: 0
  right: 0
  padding: 0

.iphone
  width: 150px
  height: 260px
  background: #fff
  border: 16px solid #444
  border-width: 32px 16px
  border-radius: 16px
  margin-bottom: 24px

.robot
  background-image: url('../images/robot.gif')
  transform: none !important

.netscape
  background-image: url('../images/netscape.gif')
  background-size: 25%
  background-position: 50% 30%
  background-repeat: no-repeat
  transform: none !important
  transition-duration: .5s
  transition-delay: 0s !important
  &.bespoke-backdrop-active
    opacity: 1 !important

.whynotboth
  background-image: url('../images/whynotboth.gif')
  background-position: 0 70%
  transform-origin: 50% 40%
  transform: none !important
  &.bespoke-backdrop-active
    opacity: 1

.virtual-dom
  background-image: url('../images/virtual-dom.gif')
  transform: none !important
  &.bespoke-backdrop-active
    opacity: 0.7

.glimmer
  background-image: url('../images/glimmer.gif')
  transform: none !important
  &.bespoke-backdrop-active
    opacity: 0.8

.stevechampeon
  background-image: url('../images/stevechampeon.jpg')
  transform-origin: 50% 40%
  &.bespoke-backdrop-active
    opacity: 0.4

.lukew
  background-image: url('../images/lukew.jpg')
  transform-origin: 70% 50%
  &.bespoke-backdrop-active
    opacity: 0.4

.bradf
  background-image: url('../images/bradf.png')
  background-position: 50% 0
  transform-origin: 50% 70%
  &.bespoke-backdrop-active
    opacity: 0.4

.aarong
  background-image: url('../images/aarong.jpg')
  background-position: 0% 100%
  transform-origin: 20% 50%
  &.bespoke-backdrop-active
    opacity: 0.4

.jakea
  background-image: url('../images/jakea.jpg')
  background-position: 0 50%
  transform-origin: 40% 40%
  &.bespoke-backdrop-active
    opacity: 0.4

.loading
  background-image: url('../images/loading-spin.svg')
  background-size: 200px
  background-position: 0 50%
  transform-origin: 50% 50%
  transform: scale(3)
  &.bespoke-backdrop-active
    opacity: 0.1
    transition-duration: 10s
  &.bespoke-backdrop-active,
  &.bespoke-backdrop-before
    transform: scale(1)

.fight
  background-image: url('../images/yo/fight.gif')
  transform: none !important
  &.bespoke-backdrop-active
    opacity: 0.8

.ryu
  background-image: url('../images/yo/ryu.gif')
  transform: none !important
  &.bespoke-backdrop-active
    opacity: 0.8
    
.strong
  background-color : #FF2D55

.red
  color : #FF2D55
  
.yellow
  color : #FFCC00

.green
  color : #4CD964

.blue
  color : #007AFF

.puple
  color : #C86EDF
  
.gray
  color : #999
.darkgray
  color : #222

.circle
  border-radius : 50%
  

article
  &.bespoke-parent
    &.primary
      background: primary
    &.white
      background: white
    &.green
      background: #4CD964
    &.blue
      background : #007AFF
    &.puple
      background : #C86EDF
    &.xecon
      background : #404040;
